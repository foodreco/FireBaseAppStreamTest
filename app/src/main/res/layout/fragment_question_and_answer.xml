<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.qna.QuestionAndAnswerFragment">

    <TextView
        android:id="@+id/textView_for_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="QnA 게시판"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/btn_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 질문보기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_for_title" />

    <TextView
        android:id="@+id/btn_write_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="나의 질문 작성하기"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_switch"
        app:layout_constraintEnd_toStartOf="@id/btn_switch"
        app:layout_constraintTop_toTopOf="@id/btn_switch" />

    <!--    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton-->
    <!--        android:id="@+id/btn_write_question"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginBottom="16dp"-->
    <!--        android:text="나의 질문 작성하기"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent" />-->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_for_board"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="2dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_switch"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_next_page"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_baseline_navigate_next_24"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/recyclerView_for_board"
        app:layout_constraintStart_toEndOf="@id/btn_previous_page"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/btn_previous_page"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/recyclerView_for_board"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout><!--</ScrollView>-->